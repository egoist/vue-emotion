{
  "name": "@egoist/vue-emotion",
  "version": "0.5.0",
  "description": "Seamlessly use emotion (CSS-in-JS) with Vue.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "url": "egoist/vue-emotion",
    "type": "git"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/server.js",
    "/server.js"
  ],
  "scripts": {
    "test": "npm run lint && echo 'no tests!'",
    "lint": "xo",
    "prepublishOnly": "npm run build",
    "build": "rollup src/index.js --file dist/index.js --format cjs && rollup src/index.js --file dist/index.esm.js --format esm && rollup src/server.js --file dist/server.js --format cjs && rollup src/server.js --file dist/server.esm.js --format esm",
    "example": "cd examples && npm run dev",
    "ssr-example": "saber ssr-example",
    "build:example": "poi --prod",
    "toc": "markdown-toc -i README.md"
  },
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "xo": {
    "extends": [
      "rem"
    ],
    "ignores": [
      "**/example/**"
    ],
    "envs": [
      "browser"
    ],
    "rules": {
      "camelcase": "off"
    }
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "dependencies": {
    "@emotion/cache": "^11.1.3",
    "@emotion/serialize": "^1.0.0",
    "@emotion/server": "^11.0.0",
    "@emotion/utils": "^1.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@emotion/babel-plugin": "^11.2.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/vue": "^6.3.4",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@vue/babel-plugin-jsx": "^1.0.3",
    "@vue/compiler-sfc": "^3.0.5",
    "babel-jest": "^26.6.3",
    "eslint-config-rem": "^4.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "markdown-toc": "^1.2.0",
    "rollup": "^3.9.0",
    "saber": "^0.11.7",
    "vue": "^3.3.4",
    "vue-jest": "^5.0.0-alpha.7",
    "vue-loader": "^16.1.2",
    "xo": "^0.38.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "yarn markdown-toc -i",
      "git add"
    ],
    "src/*.js": [
      "xo --fix",
      "git add"
    ]
  }
}
