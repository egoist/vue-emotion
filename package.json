{
  "name": "@egoist/vue-emotion",
  "version": "0.5.0",
  "description": "Seamlessly use emotion (CSS-in-JS) with Vue.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "url": "egoist/vue-emotion",
    "type": "git"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run lint && echo 'no tests!'",
    "lint": "xo",
    "prepublishOnly": "npm run build",
    "build": "bili src/index.js,src/server.js --format cjs,esm --minimal",
    "example": "poi -s",
    "build:example": "poi --prod",
    "toc": "markdown-toc -i README.md"
  },
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "xo": {
    "extends": [
      "rem"
    ],
    "ignores": [
      "**/example/**"
    ],
    "envs": [
      "browser"
    ],
    "rules": {
      "camelcase": "off"
    }
  },
  "dependencies": {
    "@emotion/cache": "^10.0.19",
    "@emotion/serialize": "^0.11.11",
    "@emotion/utils": "^0.11.2",
    "clsx": "^1.0.4",
    "create-emotion-server": "^10.0.14"
  },
  "devDependencies": {
    "babel-plugin-emotion": "^10.0.19",
    "bili": "^4.8.1",
    "eslint-config-rem": "^4.0.0",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.0",
    "markdown-toc": "^1.2.0",
    "poi": "^12.7.3",
    "saber": "^0.10.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "xo": "^0.25.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "yarn markdown-toc -i",
      "git add"
    ]
  }
}
